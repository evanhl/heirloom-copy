<div class="col-container">
  <div class="left-col">
    {{#each}}
      {{#link-to 'conversationPosts' id}}
        <div class="convo">
          <div class="icon"></div>
          <div class="details">
            <div class="names">{{name}}</div>
            <div class="sub">{{t "conversation.members" countBinding="member_count"}}</div>
          </div>
        </div>
      {{/link-to}}
    {{/each}}

    {{partial 'spinner'}}
  </div>

  <div class="main-col" style="background: white;">
      {{outlet}}
  </div>

</div>
