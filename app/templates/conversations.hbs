<div class="col-container">
  <div class="left-col">
    <div class="left-col-content">
      {{#if createMode}}
        <div class="convo highlighted">
          <div class="new-group-icon"></div>
          <div class="details">
            <div class="names">{{t 'conversations.new'}}</div>
          </div>
        </div>
      {{/if}}
      {{#each convo in this}}
        {{#link-to 'conversationPosts' convo}}
          <div class="convo">
            {{#if convo.has_unread}}
              <div class="dot"></div>
            {{/if}}
            {{render 'userIcon' convo.owner}}
            <div class="details">
              <div class="names">{{convo.name}}</div>
              <div class="sub">{{fromNow valueBinding="convo.last_post_at"}}</div>
            </div>
          </div>
        {{/link-to}}
      {{/each}}

      {{partial 'spinner'}}
    </div>

    <div class="settings">
      <button class="take-action with-icon medium" {{action 'create'}}><span class="create-convo-icon btn-icon"></span><span class="label">{{t 'conversations.create'}}</button>
    </div>
  </div>

  <div class="main-col">
    {{outlet}}
  </div>

</div>
