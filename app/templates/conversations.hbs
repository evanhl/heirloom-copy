<div class="col-container">
  <div class="left-col">
    {{#if createMode}}
      <div class="convo highlighted">
        <div class="icon"></div>
        <div class="details">
          <div class="names">{{t 'conversations.new'}}</div>
        </div>
      </div>
    {{/if}}
    {{#each}}
      {{#link-to 'conversationPosts' id}}
        <div class="convo">
          {{#if has_unread}}
            <div class="dot"></div>
          {{/if}}
          <div class="icon"><span>{{owner.initials}}</span></div>
          <div class="details">
            <div class="names">{{name}}</div>
            <div class="sub">{{fromNow valueBinding="last_post_at"}}</div>
          </div>
        </div>
      {{/link-to}}
    {{/each}}

    {{partial 'spinner'}}
    <div class="settings">
      <button class="take-action with-icon medium" {{action 'create'}}><span class="add-to-album-icon icon"></span><span class="label">{{t 'conversations.create'}}<span></button>
    </div>
  </div>

  <div class="main-col">
      {{outlet}}
  </div>

</div>
