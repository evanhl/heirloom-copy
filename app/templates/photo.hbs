<section class="opaque-lightbox">
  {{!-- {{#if loadingImg}}<div class="big-spinner"></div>{{/if}} --}}

  {{view App.ImageView image=firstState}}
  {{view App.ImageView image=secondState}}

  <div class="photo-sidebar">
    <div class="owner">
      <div class="icon"></div>
      <div class="name">{{userName}}</div>
      <div class="date">{{prettyDay created_at}}</div>
      <div style="clear: both;"></div>
    </div>
    {{#if description}}
      <div class="description">{{description}}</div>
    {{/if}}
  </div>

{{!--   {{#if prevId}}
    <a href="javascript:void();" {{action 'prevPhoto'}}><div class="left-arrow"></div></a>
  {{/if}}
  {{#if nextId}}
    <a href="javascript:void();" {{action 'nextPhoto'}}><div class="right-arrow"></div></a>
  {{/if}} --}}
</section>