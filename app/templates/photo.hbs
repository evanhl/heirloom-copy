<div class="photo-cont">
  {{view 'image' image=firstState photo=model}}
  {{view 'image' image=secondState photo=model}}
  <div class="close" {{action 'toCollection'}}></div>
</div>
<div class="photo-options">
  <div class="photo-paginate">
    {{#if prevId}}
      <div class="left-arrow" {{action 'prevPhoto'}}></div>
    {{else}}
      <div class="blank-arrow"></div>
    {{/if}}
    {{#if nextId}}
      <div class="right-arrow" {{action 'nextPhoto'}}></div>
    {{else}}
      <div class="blank-arrow"></div>
    {{/if}}
  </div>
  {{#unless metadataDisabled}}
  <div class="photo-buttons">
    <div {{bind-attr class=":photo-button :rotate-photo"}} {{action 'rotatePhoto'}}></div>{{!--
    --}}<a {{bind-attr href="model.fullVersion"}} target="_blank"><div {{bind-attr class=":photo-button :photo-download"}} {{translateAttr title="photo.download.title"}}></div></a>{{!--
    --}}<div {{bind-attr class=":photo-button :toggle-metadata :last-child showMetadata:show-metadata"}} {{action 'toggleMetadata'}} {{translateAttr title="photo.toggleMetadata.title"}}></div>
  </div>
  {{/unless}}
</div>
{{#unless metadataDisabled}}
  {{#photo-sidebar photo=model}}{{/photo-sidebar}}
{{/unless}}