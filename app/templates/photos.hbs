{{outlet}}

{{#if numSelected}}
  <div class="row">
    <h2 class="large-3 columns">{{numSelected}} selected</h2>
    {{#each batchActions}}
    <button class="large-3 columns" {{action 'batchAction' action}}>{{name}}</button>
    {{/each}}
  </div>
{{/if}}

{{#each}}
  {{#if thumbVersion}}
    <div class="gallery-photo">
      <img {{bind-attr src=thumbVersion}} {{action enlarge id}}>
      <div {{bind-attr class=":select selected"}} {{action select id}}></div>
    </div>
  {{/if}}
{{/each}}

