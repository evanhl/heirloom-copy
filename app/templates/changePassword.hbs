{{#modal-dialog action="close"}}
  {{!-- TODO: reduce copypasta between this and albumPicker.hbs
  --}}
  <div class="settings-modal">
    <div class="top-bar">
      <h3>{{t 'changePassword.title'}}</h3>
    </div>

    <form class="modal-form">
      <div class="form-group">
        {{#form-label error=errors.password label=(ts 'changePassword.new')}}{{/form-label}}
        {{input type="password" value=password classBinding=":form-line error.login:error" }}
      </div>
      <div class="form-group">
        {{#form-label label=(ts 'changePassword.new2')}}{{/form-label}}
        {{input type="password" value=passwordConfirm classBinding=":form-line error.login:error" }}
      </div>
    </form>

    <div class="bottom-bar">
      <div class="right">
        <button class="secondary" {{action 'close'}}>{{t 'cancel'}}</button>
        <button {{bind-attr class=":take-action waiting"}} {{bind-attr disabled=changeDisabled}} {{action 'changePassword'}}>{{t 'settings.changePasswordButton'}}</button>
      </div>
    </div>
  </div>
{{/modal-dialog}}