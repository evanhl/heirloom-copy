<div class="row">
  <h1>{{t 'signin'}}</h1>
</div>

{{#if error.errors.base}}
  <div class="row">
    <div class="alert-box alert large-6">
      {{error.errors.base}}
    </div>
  </div>
{{/if}}

<div class="row">
  <div class="large-6">
    {{input value=login placeholder=(ts 'signin.login') class="error.login:error" }}
    {{#each error.login}}
      <small class="error">{{this}}</small>
    {{/each}}
  </div>
</div>

<div class="row">
  <div class="large-6">
    {{input value=password placeholder=(ts 'signin.password') class="error.password:error" }}
    {{#each error.password}}
      <small class="error">{{this}}</small>
    {{/each}}
  </div>
</div>


<div class="row">
  <button {{action 'signin' bubbles=false}}>{{t 'signin.button.signin'}}</button>
</div>

{{#if isFbInit}}
  <div class="row">
    <button {{action 'fbSignin'}}>{{t 'signin.button.facebook'}}</button>
  </div>
{{/if}}