{{#modal-dialog action="close"}}
  <div {{bind-attr class=":album-picker"}}>
    <div class="top-bar">
      <h3>{{t 'zip.title'}}</h3>
    </div>
    <div class="bottom-bar">
      <div class="right">
        <button class="secondary" {{action 'close'}}>{{t 'cancel'}}</button>
        <button class="take-action" {{action 'complete'}} {{bind-attr disabled=downloadDisabled}}>{{t 'zip.download'}}</button>
      </div>
    </div>
    <div class="nav-filler"></div>

    <div class="picker-content">
      {{zipAssembly.state}}
      {{zipAssembly.error}}
      <div>{{zipAssembly.currentStage}} / {{zipAssembly.numStages}}</div>
      <div><a {{bind-attr href=zipAssembly.zipUrl}}>{{zipAssembly.zipUrl}}</a></div>
    </div>
  </div>
{{/modal-dialog}}