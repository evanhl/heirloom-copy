{{#if name}}
  <h2>{{name}}</h2>
  <div><div class="border"></div></div>
{{/if}}
<div class="images-container">
  {{#each photos}}
    <div class="photo">
      <img {{bind-attr src=thumbVersion}} {{action enlarge id}} alt="">
      <div {{bind-attr class=":select selected"}} {{action select id}}></div>
    </div>
  {{/each}}
</div>