{{#modal-dialog action="close"}}
  <div {{bind-attr class=":album-picker isCreateMode:create-mode"}}>
    <div class="top-bar">
      <h3>{{title}}</h3>
    </div>
    {{#if canCreateAlbum}}
    <div class="sub-top-bar">
      {{input value=albumName placeholder=(ts 'albums.namePlaceholder')}}
    </div>
    {{/if}}
    <div class="bottom-bar">
      <div class="right">
        <button class="secondary" {{action 'close'}}>{{t 'cancel'}}</button>
        <button class="take-action" {{action 'complete'}} {{bind-attr disabled=cantComplete}}>{{t 'add'}}</button>
      </div>
    </div>
    <div class="nav-filler"></div>

    <div class="picker-content">
      {{#if canCreateAlbum}}
        <div {{bind-attr class=":create-new-album isCreateMode:selected"}} {{action 'toggleCreateMode'}}>
          <span class="caption">{{t 'albums.create'}}</span>
        </div>{{!--
  --}}{{/if}}{{!--
  --}}{{#each albums}}{{render 'thumbAlbum' this enlargeDisabled=true}}{{/each}}
    </div>
  </div>
{{/modal-dialog}}