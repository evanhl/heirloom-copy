{{#modal-dialog action="close"}}
  <div style="
    position: absolute;
    bottom: 0;
    right: 0;
    left: 0;
    top: 0;
    margin: auto;
    height: 50%;
    width: 100%;
    max-width: 1000px;
    min-height: 600px;
    background: white;
    overflow: scroll;
  ">

    <nav class="mini-nav">
      <ul>
        <li {{bind-attr class=":photosPicker photosPickerIsActive:active"}}>
          <a href="javascript:void();"
            {{action "changeTab" "photosPicker"}}
          >{{t "photos"}}</a>
        </li>
        <li {{bind-attr class=":albumsPicker albumsPickerIsActive:active"}}>
          <a href="javascript:void();"
            {{action "changeTab" "albumsPicker"}}
          >{{t "albums"}}</a>
        </li>
        <li {{bind-attr class=":uploadPicker uploadPickerIsActive:active"}}>
          <a href="javascript:void();"
            {{action "changeTab" "uploadPicker"}}
          >{{t "upload"}}</a>
        </li>
      </ul>
    </nav>

    <div class="nav-filler"></div>

    {{#if photosPickerIsActive}}
      {{render "photosPicker"}}
    {{/if}}

    {{#if albumsPickerIsActive}}
      {{render "albumsPicker"}}
    {{/if}}

    {{#if uploadPickerIsActive}}
      {{render "uploadPicker"}}
    {{/if}}
  </div>

{{/modal-dialog}}